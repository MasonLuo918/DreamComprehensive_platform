<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Dream.dao.SectionDao">
    <resultMap id="sectionMap" type="section">
        <id column="id" property="id"/>
        <result column="department_id" property="departmentID"/>
        <result column="account" property="account"/>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <result column="create_time" property="createTime" typeHandler="com.Dream.commons.typeHandler.LocalDateTypeHandler"/>
        <association property="department" select="com.Dream.dao.DepartmentDao.selectOne" column="{id=department_id}"/>
    </resultMap>
    <sql id="sectionSelect">
        SELECT `id`, `department_id`, `account`, `name`, `password`, `create_time`
        FROM `section`
    </sql>

    <insert id="insert" parameterType="section" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO section
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="id != null">
                id,
            </if>
            <if test="departmentID != null">
                department_id,
            </if>
            <if test="account != null and account != ''">
                account,
            </if>
            <if test="name != null and name != ''">
                name,
            </if>
            <if test="password != null and password != ''">
                password,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="createTime != null and createTime != ''">
                create_time,
            </if>
        </trim>
        <trim prefix="VALUES(" suffixOverrides="," suffix=")">
            <if test="id != null">
                #{id},
            </if>
            <if test="departmentID != null">
                #{departmentID},
            </if>
            <if test="account != null and account != ''">
                #{account},
            </if>
            <if test="name != null and name != ''">
                #{name},
            </if>
            <if test="password != null and password != ''">
               #{password},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="createTime != null and createTime != ''">
                #{createTime, typeHandler= com.Dream.commons.typeHandler.LocalDateTypeHandler},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="section">
        UPDATE section
        <set>
            <if test="departmentID != null">
                department_id = #{departmentID},
            </if>
            <if test="account != null and account != ''">
                account = #{account},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="password != null and name != ''">
                password = #{password},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createTime != null and createTime != ''">
                create_time = #{createTime, typeHandler= com.Dream.commons.typeHandler.LocalDateTypeHandler},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <delete id="delete" parameterType="int">
        DELETE FROM section
        WHERE id = #{id}
    </delete>
    
    
    <select id="selectOne" parameterType="section" resultMap="sectionMap">
        <include refid="sectionSelect"/>
        <where>
            <if test="id != null">
               and id = #{id}
            </if>

            <if test="departmentID != null">
                and department_id = #{departmentID}
            </if>
            
            <if test="account != null and account != ''">
                and account = #{account}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        LIMIT 1
    </select>
    
    <select id="selectByDepartmentID" resultMap="sectionMap" parameterType="int">
        <include refid="sectionSelect"/>
        WHERE department_id = #{departmentID}
    </select>

    <select id="selectByAccount" parameterType="string" resultMap="sectionMap">
        <include refid="sectionSelect"/>
        WHERE account = #{account}
    </select>

    <delete id="deleteByAccount" parameterType="string">
        DELETE FROM section
        WHERE account = #{account}
    </delete>
</mapper>